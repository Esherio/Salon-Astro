---
interface Props {
  tag: "h1" | "h2" | "h3" | "h4" | "h5";
  text: string;
  className?: string;
}
const { tag, text, className = "" } = Astro.props;
const Tag = tag;
---

<Tag class={className}>{text}</Tag>

<style>
  h1 {
    font-size: 3.2rem;
  }
  h2 {
    font-size: 2.8rem;
  }
  h3 {
    font-size: 2.2rem;
  }
  h4 {
    font-size: 2rem;
  }
  h5 {
    font-size: 1.8rem;
  }
</style>
