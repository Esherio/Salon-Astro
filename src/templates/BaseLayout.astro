---
import Seo from "../meta/SEO.astro";
const {
  title = "Kira Glam Salon — Nail Salon in Amsterdam",
  description = "Welcome to Kira Glam — a cozy and professional nail salon in Amsterdam.",
  keywords = "nail salon Amsterdam, manicure Amsterdam",
  url = "https://yourdomain.com",
  image = "/og-image.jpg",
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:wght@300;400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <Seo
      title={title}
      description={description}
      keywords={keywords}
      url={url}
      image={image}
    />
  </head>
  <body>
    <main>
      <slot />
    </main>
  </body>
</html>
